# ============================================
# üîê QIANLUNSHOP - ENVIRONMENT VARIABLES
# Copy to .env and fill with your values
# ============================================

# ==========================================
# üåç General
# ==========================================
NODE_ENV=development
PORT=5000

# ==========================================
# üóÑÔ∏è Database (MongoDB)
# ==========================================
MONGODB_URI=mongodb://admin:secure_password_change_me@localhost:27017/qianlunshop?authSource=admin

# ==========================================
# üîê JWT Authentication
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# ==========================================
# üåê CORS
# ==========================================
CORS_ORIGIN=http://localhost:3000

# ==========================================
# üìß Email (Optional - for notifications)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ==========================================
# üí≥ Payment Gateway (Midtrans)
# ==========================================
MIDTRANS_SERVER_KEY=SB-Mid-server-your_server_key
MIDTRANS_CLIENT_KEY=SB-Mid-client-your_client_key
MIDTRANS_MERCHANT_ID=your_merchant_id
MIDTRANS_ENVIRONMENT=sandbox

# ==========================================
# üîí Security
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# üìä Redis (Optional - for caching)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=secure_redis_password

# ==========================================
# üìù Logging
# ==========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==========================================
# üîß Development
# ==========================================
DEBUG=true
API_BASE_URL=http://localhost:5000/api
